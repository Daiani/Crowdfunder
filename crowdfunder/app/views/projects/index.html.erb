<h1>All projects</h1>

<% @projects.each do |project| %>
<div class="project">
	 <h2><%= project.name %></h2>
	 <p><%= project.description %></p>
	 <p><%= project.funding_goal %></p>
	 <p><%= start_date %></p>
	 <p><%= end_date %></p>
	</div>

	<% project.rewards.each do |reward| %>
		<div  class="reward">
			<h4><%= reward.description %></h4>
			<p><%= reward.amount %></p>
		</div>
		
  <% end %>

  <% end %>
