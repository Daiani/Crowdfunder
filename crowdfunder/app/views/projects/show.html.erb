

<h1>project:<br/> <%= @project.name %></h1





<p><%= @project.description %><br/>
<%= @project.funding_goal %><br/>
<%= @project.start_date %><br/>
<%= @project.end_date %><br/>
<%= @project.funding_goal %><p> 




<%= link_to 'Back', projects_new %><br/>
<%= link_to 'Delete', projects_id %>

<% if current_user == @project.user %>
  <%= link_to "Delete", @project, method: :delete, data: {confirm: "Are you sure you want to delete this project?"} %>
<% end %>


<% @project.rewards.each do |reward| %>
  <div class="reward">
    <%= reward.title %><br/>
    <%= reward.description %><br/>
    <%= reward.amount %><br/>

    <%= form_for pledges_path do |f| %>
      <%= f.hidden_field :pledge_id, value: reward.amount %>
      <%= f.submit "Select this reward" %>
    <% end %>

    
  </div>
<% end %>